<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2"
     xmlns:gx="http://www.google.com/kml/ext/2.2"
     xmlns:kml="http://www.opengis.net/kml/2.2"
     xmlns:atom="http://www.w3.org/2005/Atom">
    <Document>
        <name>FOOTPRINTS</name>
        <open>1</open>
        <Style id="sh_ylw-pushpin">
            <IconStyle>
                <scale>1.3</scale>
                <Icon>
                    <href>http://maps.google.com/mapfiles/kml/pushpin/ylw-pushpin.png</href>
                </Icon>
                <hotSpot x="20" y="2" xunits="pixels" yunits="pixels" />
            </IconStyle>
            <LineStyle>
                <color>87000000</color>
                <width>1.9</width>
            </LineStyle>
            <PolyStyle>
                <color>7300aa00</color>
                <outline>0</outline>
            </PolyStyle>
        </Style>
        <Style id="sn_ylw-pushpin">
            <IconStyle>
                <scale>1.1</scale>
                <Icon>
                    <href>http://maps.google.com/mapfiles/kml/pushpin/ylw-pushpin.png</href>
                </Icon>
                <hotSpot x="20" y="2" xunits="pixels" yunits="pixels" />
            </IconStyle>
            <LineStyle>
                <color>87000000</color>
                <width>1.9</width>
            </LineStyle>
            <PolyStyle>
                <color>7300aa00</color>
                <outline>0</outline>
            </PolyStyle>
        </Style>
        <StyleMap id="msn_ylw-pushpin0">
            <Pair>
                <key>normal</key>
                <styleUrl>#sn_ylw-pushpin</styleUrl>
            </Pair>
            <Pair>
                <key>highlight</key>
                <styleUrl>#sh_ylw-pushpin</styleUrl>
            </Pair>
        </StyleMap>
        {% for footprint in footprints %}
        <Placemark>
            <name>{{ footprint.photo_id }}</name>
            <description>
                x_value: {{ footprint.x_value }}
                y_value: {{ footprint.y_value }}
                z_value: {{ footprint.z_value }}
                o_value: {{ footprint.o_value }}
                p_value: {{ footprint.p_value }}
                k_value: {{ footprint.k_value }}
                Ground Height: {{ footprint.ground_height }}
                CRS EPSG code: {{ footprint.epsg_code }}
            </description>
            <styleUrl>#msn_ylw-pushpin0</styleUrl>
            <Polygon>
                <tessellate>1</tessellate>
                <outerBoundaryIs>
                    <LinearRing>
                        <coordinates>
                            {{ footprint.corner_coordinates[0][0] }},{{ footprint.corner_coordinates[0][1] }},{{ footprint.ground_height }}
                            {{ footprint.corner_coordinates[1][0] }},{{ footprint.corner_coordinates[1][1] }},{{ footprint.ground_height }}
                            {{ footprint.corner_coordinates[3][0] }},{{ footprint.corner_coordinates[3][1] }},{{ footprint.ground_height }}
                            {{ footprint.corner_coordinates[2][0] }},{{ footprint.corner_coordinates[2][1] }},{{ footprint.ground_height }}
                        </coordinates>
                    </LinearRing>
                </outerBoundaryIs>
            </Polygon>
        </Placemark>
        {% endfor %}
    </Document>
</kml>
